{
  "name": "@mattb.tech/lonesome-website",
  "version": "1.0.0",
  "description": "Personal website where I can share things without using social media.",
  "private": true,
  "scripts": {
    "build": "npm run codegen && yarn build:lonesome && yarn build:share",
    "build:lonesome": "next build",
    "build:share": "SHARE_MODE=true next build",
    "analyze": "ANALYZE=true next build",
    "dev": "next dev",
    "start": "next start -p 3001",
    "check": "../../scripts/check.sh && next lint",
    "clean": "../../scripts/clean.sh && rm -Rf out .next",
    "fix": "../../scripts/fix.sh",
    "codegen": "graphql-codegen --config codegen.yml",
    "copy-pages:local": "rsync -av --exclude='.github' --exclude='.git' ../../../share.mattb.tech-pages/ pages/",
    "copy-pages:ci": "rsync -av --exclude='.github' --exclude='.git' ../../share.mattb.tech-pages/ pages/"
  },
  "author": "Matt Benton <m@mattb.tech>",
  "license": "UNLICENSED",
  "devDependencies": {
    "@graphql-codegen/cli": "5.0.4",
    "@graphql-codegen/typescript": "4.1.3",
    "@graphql-codegen/typescript-operations": "4.4.1",
    "@graphql-codegen/typescript-react-apollo": "4.3.2",
    "@mapbox/rehype-prism": "^0.9.0",
    "@next/bundle-analyzer": "^14.2.23",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@types/dotenv": "^8.2.3",
    "@types/lodash.chunk": "^4.2.9",
    "@types/lodash.flatmap": "^4.5.9",
    "@types/react": "^18.3.18",
    "eslint": "8.57.1",
    "eslint-config-next": "^14.2.23",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@apollo/client": "^3.12.8",
    "@ariakit/react": "^0.4.15",
    "@mattb.tech/data-fetching": "1.0.0",
    "@mattb.tech/remark-flickr": "1.0.0",
    "@mdx-js/loader": "^3.1.0",
    "@next/mdx": "^14.2.23",
    "@tailwindcss/typography": "^0.5.16",
    "@types/isomorphic-fetch": "0.0.39",
    "@types/react-lazyload": "^3.2.3",
    "autoprefixer": "^10.4.20",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.7",
    "globby": "^11.1.0",
    "graphql": "^16.10.0",
    "graphql-tag": "^2.12.6",
    "gray-matter": "^4.0.3",
    "isomorphic-fetch": "^3.0.0",
    "lodash.chunk": "^4.2.0",
    "lodash.flatmap": "^4.5.0",
    "next": "^14.2.30",
    "next-plugin-preval": "^1.2.7",
    "next-themes": "^0.2.1",
    "postcss": "^8.5.1",
    "postcss-import": "^16.1.0",
    "postcss-nesting": "^12.1.5",
    "prismjs": "^1.30.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-feather": "^2.0.10",
    "react-icons": "^5.4.0",
    "react-lazyload": "^3.2.1",
    "rehype-react": "^8.0.0",
    "rehype-stringify": "^10.0.1",
    "remark": "^15.0.1",
